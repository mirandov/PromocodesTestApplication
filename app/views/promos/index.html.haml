.page-header
  %h1= t('headers.promos.index')

%table.table.table-hover.table-striped
  %caption
    = link_to new_promo_path, class: 'btn btn-success' do
      = fa_icon :plus
      = 'Новый промокод'
  %thead
    %tr
      %th= Promo.human_attribute_name(:name)
      %th= Promo.human_attribute_name(:sale)
      %th= Promo.human_attribute_name(:quantity)
  %tbody
    - @promos.each do |promo|
      %tr
        %td.center= promo.name
        %td.center= promo.sale
        %td.center= promo.quantity
        %td.right
          = link_to edit_promo_path(promo), class: 'btn btn-info' do
            = fa_icon :edit
            = t('buttons.edit')
          = link_to promo, :method => :delete,
          :data => { :confirm => t('buttons.confirm.user') },
          class: 'btn btn-danger' do
            = fa_icon :times
            = t('buttons.destroy')
